<Window x:Class="xZune.Vlc.Wpf.Sample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:wpf="clr-namespace:xZune.Vlc.Wpf;assembly=xZune.Vlc.Wpf"
        xmlns:local="clr-namespace:xZune.Vlc.Wpf.Sample"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <wpf:VlcPlayer x:Name="player" LibVlcPath="..\..\..\..\..\LibVlc"/>
        <Button VerticalAlignment="Bottom" Content="Play" BorderThickness="0" Background="#7F8241F5" Click="Button_Click" ></Button>
    </Grid>
</Window>
