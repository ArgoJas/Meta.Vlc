<Window x:Class="xZune.Vlc.Wpf.Sample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wpf="clr-namespace:xZune.Vlc.Wpf;assembly=xZune.Vlc.Wpf"
        Title="xZune.Vlc.Wpf.Sample" Height="350" Width="525" WindowState="Maximized" WindowStyle="None">
    <Grid>
        <wpf:VlcPlayer x:Name="Player"/>
        <StackPanel Opacity="0.8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="path"/>
                <Button Grid.Column="1" Content="Load" Click="Button_Click_3"/>
            </Grid>
            <Button Content="Play" Click="Button_Click_2">
            </Button>
            <Button Content="Pause" Click="Button_Click_1"></Button>
            <Button Content="Stop" Click="Button_Click"></Button>
            <ComboBox SelectedIndex="0" SelectionChanged="ComboBox_SelectionChanged">
                <ComboBoxItem Content="Default"/>
                <ComboBoxItem Content="16:9"/>
                <ComboBoxItem Content="4:3"/>
            </ComboBox>
        </StackPanel>
        <ProgressBar Opacity="0.8" Value="{Binding Position, ElementName=Player}" VerticalAlignment="Bottom" Height="10" Maximum="1" SmallChange="0.00001"/>
    </Grid>
</Window>
